model Trip {
  id          String     @id @default(uuid())
  name        String
  destination String
  startDate   DateTime
  endDate     DateTime
  createdById String
  createdBy   User       @relation(fields: [createdById], references: [id])
  members     TripUser[]
  invites     Invite[]
  itinerary   Itinerary[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model TripUser {
  id     String @id @default(uuid())
  tripId String
  userId String
  role   Role   @default(MEMBER)
  trip   Trip   @relation(fields: [tripId], references: [id],onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, tripId])
}

model Itinerary {
  id     String   @id @default(uuid())
  tripId String  
  trip   Trip     @relation(fields: [tripId], references: [id],onDelete: Cascade)
  date   DateTime

  startTime String
  endTime   String

  title String
  note  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invite {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id],onDelete: Cascade)
  expiresAt DateTime
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MEMBER
}
