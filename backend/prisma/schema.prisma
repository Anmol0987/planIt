model Trip {
  id          String      @id @default(uuid())
  name        String
  destination String
  startDate   DateTime
  endDate     DateTime
  createdById String
  createdBy   User        @relation(fields: [createdById], references: [id])
  members     TripUser[]
  invites     Invite[]
  itinerary   Itinerary[]
  poll        Poll[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model TripUser {
  id     String @id @default(uuid())
  tripId String
  userId String
  role   Role   @default(MEMBER)
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, tripId])
}

model Itinerary {
  id     String   @id @default(uuid())
  tripId String
  trip   Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  date   DateTime

  startTime String
  endTime   String

  title String
  note  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invite {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Poll {
  id        String       @id @default(uuid())
  tripId    String
  createdBy String
  question  String
  type      PollType
  isClosed  Boolean
  options   PollOption[] 
  votes     PollVote[]   
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  Trip Trip @relation(fields: [tripId], references: [id],onDelete: Cascade)
}

model PollOption {
  id     String     @id @default(uuid())
  pollId String
  text   String
  votes  PollVote[]
  Poll   Poll       @relation(fields: [pollId], references: [id],onDelete: Cascade)
}

model PollVote {
  id       String @id @default(uuid())
  pollId   String
  optionId String
  userId   String

  Poll   Poll       @relation(fields: [pollId], references: [id],onDelete: Cascade)
  Option PollOption @relation(fields: [optionId], references: [id])

  createdAt DateTime @default(now())

  @@unique([pollId, userId, optionId])
}

enum Role {
  ADMIN
  MEMBER
}

enum PollType {
  SINGLE
  MULTIPLE
}
